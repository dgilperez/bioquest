# App Configuration
NEXT_PUBLIC_APP_NAME=BioQuest
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
DATABASE_URL="file:./dev.db"

# iNaturalist OAuth
INATURALIST_CLIENT_ID=your_client_id_here
INATURALIST_CLIENT_SECRET=your_client_secret_here
INATURALIST_REDIRECT_URI=http://localhost:3000/api/auth/callback/inaturalist

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Optional: Redis for caching (production)
# REDIS_URL=redis://localhost:6379

# Sentry Error Tracking (optional but recommended for production)
# Get your DSN from https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
# SENTRY_ENVIRONMENT=development
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=
